

@model FoRent.Models.User
@{
    ViewBag.Title = "Log In";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/Home-Page.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#flip").click(function () {
                $("#panel").slideDown("slow");
            });
        });
    </script>


</head>

<body id="spacial-body">
  

    <section id="container">

        <div id="navi">
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/House5.jpg" class="d-block w-100">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/House8.jpg" class="d-block w-100">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/House12.jpg" class="d-block w-100">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/House13.jpg" class="d-block w-100">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/House15.jpg" class="d-block w-100">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/House16.jpg" class="d-block w-100">
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="myModal" role="dialog">
            <div class="wrapper fadeInDown modal-dialog">
                <div class="modal-content" >

                    <!-- close option -->
                    <button type="button" class="close" data-dismiss="modal">&times;</button>

                    <!-- Tabs Titles -->
                    <h2 class="active"> כניסה </h2>

                    <!-- Login Form -->
                    <form >
                        <br/>
                        @Html.TextBoxFor(m => m.Username, new { @class = "fadeIn second", @placeholder = "שם משתמש*" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(m => m.password, new { @class = "fadeIn third", @placeholder = "סיסמה*" })
                        @Html.ValidationMessageFor(m => m.password)
                        @if (@ViewBag.NotValidUser != null)
                        {
                            <label class="error"> @ViewBag.NotValidUser</label>
                        }
                        <br />
                        <br />
                        <input type="submit" class="fadeIn fourth" value="התחבר">
                        <br />
                        <br />
                    </form>

                    <!-- Remind Passowrd -->
                    <div id="formFooter">
                        <a class="underlineHover" href="#">שכחת סיסמה?</a>
                    </div>
                </div>
            </div>
        </div>

         

       
        <form id="infoi">
            <div class="center">
                <br />
                <br />
                <div>איפה</div>
                <input />
                <br />
                <br />
                <div class="toRight">צ'אק אין</div>
                <div class="toLeft">צ'אק אאוט </div>
                <br />
                <input class="toRight" type="date" data-date-format="DD MM YYYY" />
                <input class="toLeft" type="date" data-date-format="DD MM YYYY" />
                <br />
                <br />
                <div class="toRight">מבוגרים</div>
                <div class="toLeft">ילדים</div>
                <br />
                <input class="toRight" list="numofchild" id="child" />

                <datalist id="numofchild">
                    <option value="1 ילד"></option>
                    <option value=" 2 ילדים"></option>
                    <option value=" 3 ילדים"></option>
                    <option value=" 4 ילדים"></option>
                    <option value=" 5 ילדים"></option>
                    <option value=" 6 ילדים"></option>
                    <option value=" 7 ילדים"></option>
                    <option value=" 8 ילדים"></option>
                    <option value=" 9 ילדים"></option>
                    <option value="10 ילדים"></option>
                    <option value=" 11 ילדים"></option>
                    <option value="12 ילדים"></option>
                    <option value=" 13 ילדים"></option>
                    <option value="14 ילדים"></option>
                    <option value=" 15 ילדים"></option>
                    <option value="16 ילדים"></option>
                    <option value=" 17 ילדים"></option>
                    <option value="18 ילדים"></option>
                    <option value=" יותר מ-18 מילדים"></option>

                </datalist>

                <input class="toLeft" list="numofadult" id="adult" />

                <datalist id="numofadult">
                    <option value="1 מבוגר"></option>
                    <option value=" 2 מבוגרים"></option>
                    <option value=" 3 מבוגרים"></option>
                    <option value=" 4 מבוגרים"></option>
                    <option value=" 5 מבוגרים"></option>
                    <option value=" 6 מבוגרים"></option>
                    <option value=" 7 מבוגרים"></option>
                    <option value=" 8 מבוגרים"></option>
                    <option value=" 9 מבוגרים"></option>
                    <option value="10 מבוגרים"></option>
                    <option value=" 11 מבוגרים"></option>
                    <option value="12 מבוגרים"></option>
                    <option value=" 13 מבוגרים"></option>
                    <option value="14 מבוגרים"></option>
                    <option value=" יותר מ-14 מבוגרים"></option>
                </datalist>
                <br />
                <br />
                <button type="submit" class="btn btn-outline-secondary" size="90px">חיפוש</button>
            </div>
        </form>
        <div class="button-location">
            <button type="button" class="btn btn-light">
                <a class="button-home" asp-controller="Apartments" asp-action="Create">הוסף את פרטי הדירה שלך</a>
            </button>

            <button type="button" class="btn btn-light" data-toggle="modal" data-target="#myModal">כניסה</button>

            <button type="button" class="btn btn-light" ,>
                <a class="button-home" asp-controller="Users" asp-action="Create">הרשמו</a>
            </button>
        </div>
    </section>
    <hr />

    <section>
        <div class="card-deck">
            <div class="card">
                <img src="~/images/bneibrak.jpg" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">בני ברק</h5>
                    <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                </div>
            </div>
            <div class="card">
                <img src="~/images/319496-1521-29-08-18-3D.jpg.webp" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">ירושלים</h5>
                    <p class="card-text">This card has supporting text below as a natural lead-in to additional content.</p>
                </div>
            </div>
            <div class="card">
                <img src="~/images/zfat2.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">צפת</h5>
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This card has even longer content than the first to show that equal height action.</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
            </div>
        </div>
       
    </section>

    
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}