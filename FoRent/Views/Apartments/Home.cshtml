@model IEnumerable<FoRent.Models.Apartment>



@{

    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/Home-Page.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
   <script src="~/js/home.js"></script>

</head>

<body id="spacial-body">


    <section id="container">

        <div id="navi">
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/House5.jpg" class="d-block w-100">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/House8.jpg" class="d-block w-100">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/House12.jpg" class="d-block w-100">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/House13.jpg" class="d-block w-100">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/House15.jpg" class="d-block w-100">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/House16.jpg" class="d-block w-100">
                    </div>
                </div>
            </div>
        </div>




        <form asp-action="Index" id="infoi" class="center">

            <br />
            <br />
            <div>עיר</div>
            <input type="text" name="city" />
            <br />
            <br />
            <div class="toRight">צ'אק אין</div>
            <div class="toLeft">צ'אק אאוט </div>
            <br />
            <input name="checkIn" class="toRight" type="date" data-date-format="DD MM YYYY" />
            <input name="checkOut" class="toLeft" type="date" data-date-format="DD MM YYYY" />
            <br />
            <br />
            <div class="toRight">מבוגרים</div>
            <div class="toLeft">ילדים</div>
            <br />
            <input name="adult" class="toRight" list="numofchild" id="child" />

            <datalist id="numofchild">
                @for (int i = 1; i < 19; i++)
                {
                    <option value=@i>מבוגרים</option>
                }
            </datalist>

            <input name="child" class="toLeft" list="numofadult" id="adult" />

            <datalist id="numofadult">
                @for (int i = 1; i < 19; i++)
                {
                    <option value=@i>ילדים</option>
                }
            </datalist>

            <br />
            <br />
            <button type="submit" class="btn btn-outline-secondary" size="90px" method="post">חיפוש</button>



        </form>
        <div class="button-location">
            <button type="button" class="btn btn-light">
                <a class="button-home" asp-controller="Apartments" asp-action="Create">הוסף את פרטי הדירה שלך</a>
            </button>

            <button id="flip" type="button" class="btn btn-light">כניסה</button>


            <button type="button" class="btn btn-light">
                <a class="button-home" asp-controller="Users" asp-action="Create">הרשמו</a>
            </button>
           
            <div id="panel">
                <button type="button" class="close" aria-label="Close" id="close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <meta name="viewport" content="width=device-width" />
                <link rel="stylesheet" href="~/css/login.css" />
                @Html.Partial("~/Views/Account/Index.cshtml")
            </div>
        </div>
       
    </section>
    <hr />

    <section>
        <div class="card-deck">
            <div class="card">
                <img src="~/images/bneibrak.jpg" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">בני ברק</h5>
                    <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                </div>
            </div>
            <div class="card">
                <img src="~/images/319496-1521-29-08-18-3D.jpg.webp" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">ירושלים</h5>
                    <p class="card-text">This card has supporting text below as a natural lead-in to additional content.</p>
                </div>
            </div>
            <div class="card">
                <img src="~/images/zfat2.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">צפת</h5>
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This card has even longer content than the first to show that equal height action.</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
            </div>
        </div>

    </section>
   


</body>
</html>


