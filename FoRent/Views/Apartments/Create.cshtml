@model FoRent.Models.Apartment



<br />
<br />
    <h1 ><b><u>הכנס את מקום הארוח שלך</u></b></h1>
<br />
<br />
<br />
<br />
<div class="row toRight">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger-" ></div>
            <div >
                <h3>פרטים אישיים</h3>
                <div class="form-group">
                    <label asp-for="Renter.Username" class="control-label"></label>
                    <input asp-for="Renter.Username" class="form-control" />
                    <span asp-validation-for="Renter.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Renter.password" class="control-label"></label>
                    <input asp-for="Renter.password" class="form-control" />
                    <span asp-validation-for="Renter.password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Renter.FirstName" class="control-label"></label>
                    <input asp-for="Renter.FirstName" class="form-control" />
                    <span asp-validation-for="Renter.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Renter.LastName" class="control-label"></label>
                    <input asp-for="Renter.LastName" class="form-control" />
                    <span asp-validation-for="Renter.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Renter.Mail" class="control-label"></label>
                    <input asp-for="Renter.Mail" class="form-control" />
                    <span asp-validation-for="Renter.Mail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Renter.Phone" class="control-label"></label>
                    <input asp-for="Renter.Phone" class="form-control" />
                    <span asp-validation-for="Renter.Phone" class="text-danger"></span>
                </div>
            </div>
            <div>
                <h3>פרטי הדירה</h3>
                <div class="form-group">
                    <label asp-for="Location.Address" class="control-label"></label>
                    <input asp-for="Location.Address" class="form-control" />
                    <span asp-validation-for="Location.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location.City" class="control-label"></label>
                    <input asp-for="Location.City" class="form-control" />
                    <span asp-validation-for="Location.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PriceAdult" class="control-label"></label>
                    <input asp-for="PriceAdult" class="form-control" />
                    <span asp-validation-for="PriceAdult" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PriceChild" class="control-label"></label>
                    <input asp-for="PriceChild" class="form-control" />
                    <span asp-validation-for="PriceChild" class="text-danger"></span>
                </div>
            </div>
            <div>
                <h3>מאפייני הדירה</h3>
                <div class="form-group">
                    <label asp-for="Amenities.NumOfRooms" class="control-label"></label>
                    <input asp-for="Amenities.NumOfRooms" class="form-control" />
                    <span asp-validation-for="Amenities.NumOfRooms" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Amenities.NumOfPersons" class="control-label"></label>
                    <input asp-for="Amenities.NumOfPersons" class="form-control" />
                    <span asp-validation-for="Amenities.NumOfPersons" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Amenities.Description" class="control-label"></label>
                    <input asp-for="Amenities.Description" class="form-control" />
                    <span asp-validation-for="Amenities.Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Amenities.Parking" /> @Html.DisplayNameFor(model => model.Amenities.Parking)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Amenities.Plata" /> @Html.DisplayNameFor(model => model.Amenities.Plata)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Amenities.HotWater" /> @Html.DisplayNameFor(model => model.Amenities.HotWater)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Amenities.Wifi" /> @Html.DisplayNameFor(model => model.Amenities.Wifi)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Amenities.Accessibility" /> @Html.DisplayNameFor(model => model.Amenities.Accessibility)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Amenities.AirConditioning" /> @Html.DisplayNameFor(model => model.Amenities.AirConditioning)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Amenities.Balcony" /> @Html.DisplayNameFor(model => model.Amenities.Balcony)
                        </label>
                    </div>
                </div>
            </div>
            <div>
                <h3>מדיניות</h3>
                <div class="form-group">
                    <label asp-for="Policy.Checkin" class="control-label"></label>
                    <input asp-for="Policy.Checkin" class="form-control" />
                    <span asp-validation-for="Policy.Checkin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Policy.Checkout" class="control-label"></label>
                    <input asp-for="Policy.Checkout" class="form-control"  />
                    <span asp-validation-for="Policy.Checkout" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Policy.Extrabeds" /> @Html.DisplayNameFor(model => model.Policy.Extrabeds)
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Amenities.Comment" class="control-label"></label>
                <input asp-for="Amenities.Comment" class="form-control" />
                <span asp-validation-for="Amenities.Comment" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="הוסף את מקום הארוח שלך" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



