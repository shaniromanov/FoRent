
@{
    ViewData["Title"] = "About";
}

<h1>אודותינו</h1>

<video controls="controls" autoplay="autoplay" loop="loop"
       width="233" height="147" poster="//www.cdn.com//video.png"
       preload="auto" title="Video">
    <source src="//www.cdn.com/video.mp4" type="video/mp4" />
    <source src="//www.cdn.com/video.ogv" type="video/ogv" />
    <source src="//www.cdn.com/video.webm" type="video/webm" />
</video>
<br />
<br />
<br />
<h1>קצת לגבי מספרים</h1>
<h3>אז כמה האתר שלנו פופולרי</h3>
<br />
<br />
<div class="wrapper">
    <div class="counter col_fifth">
        <i class="fa fa-bed fa-2x"></i>
        <h2 class="timer count-title count-number" data-to="@ViewBag.apartment" data-speed="1500"></h2>
        <p class="count-text ">דירות באתר </p>
    </div>

    <div class="counter col_fifth">
        <i class="fa fa-bank fa-2x"></i>
        <h2 class="timer count-title count-number" data-to="@ViewBag.cities" data-speed="1500"></h2>
        <p class="count-text ">מספר ערים</p>
    </div>

    <div class="counter col_fifth">
        <i class="fa fa-lightbulb-o fa-2x"></i>
        <h2 class="timer count-title count-number" data-to="@ViewBag.orders" data-speed="1500"></h2>
        <p class="count-text ">הזמנות</p>
    </div>

    <div class="counter col_fifth">
        <i class="fa fa-users fa-2x"></i>
        <h2 class="timer count-title count-number" data-to="@ViewBag.users" data-speed="1500"></h2>
        <p class="count-text ">משתמשים רשומים</p>
    </div>
</div>

@section Scripts {
<script src="~/js/about.js"></script>
<link href="~/css/about.css" rel="stylesheet" />
}

