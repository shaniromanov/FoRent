@model IEnumerable<FoRent.Models.Policy>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Checkin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Checkout)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cancellations)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Extrabeds)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Creditcardsaccepted)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Checkin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Checkout)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cancellations)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Extrabeds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creditcardsaccepted)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
