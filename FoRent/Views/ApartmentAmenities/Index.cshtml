@model IEnumerable<FoRent.Models.ApartmentAmenities>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NumOfRooms)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumOfPersons)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Parking)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Wifi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Accessibility)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AirConditioning)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Balcony)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comment)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfRooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfPersons)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parking)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wifi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Accessibility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AirConditioning)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balcony)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
