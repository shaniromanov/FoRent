@model FoRent.Models.User

@{
    ViewData["Title"] = "Create";
}

<br />
<br />
<br />
<h1><b>יצירת משתמש חדש</b></h1>
<br />
<h4>הרשם</h4>
<br />
<hr />
<br />
<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="jumbotron text-center">
                <h3><b>בחר שם משתמש וסיסמה</b></h3>
                <br />
                <div class="form-group float-label-control">
                    <label asp-for="Username" class="control-label"></label><br />
                    <input asp-for="Username" class="form-control" placeholder=":שם משתמש" /><br />
                    <span asp-validation-for="Username" class="text-danger"></span><br />
                </div>
                <p style="color:red">@ViewBag.error</p>
                <div class="form-group float-label-control">
                    <label asp-for="password" class="control-label"></label><br />
                    <input asp-for="password" class="form-control" placeholder=":סיסמה" /><br />
                    <span asp-validation-for="password" class="text-danger"></span><br />
                </div>

                <h4>שם המשתמש והסיסמה ישמשו לך בעת כניסתך לאתר</h4>

            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail" class="control-label"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="המשך" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
